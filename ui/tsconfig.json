{
    "compilerOptions": {
        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "useUnknownInCatchVariables": true,
        "moduleResolution": "node",
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipDefaultLibCheck": true,
        "target": "ES2021",
        "outDir": "./out",
        "jsx": "preserve",
        "jsxImportSource": "solid-js"
    },
    "include": [
        "src"
    ]
}
